{% extends 'layout.html.twig' %}

{% block title %}Catégorie {{ categorie.id }}{% endblock %}
{% block css %}
    <link rel="stylesheet" href="{{ base_path()}}/{{ css }}/formBox.css ">
{% endblock %}
{% block js %}
    <script defer src="{{ base_path()}}/{{ js }}/formBox.js"></script>
{% endblock %}

{% block content %}
    <h1>Créer une catégorie</h1>
    <form action="{{ url_for('PostCreateCategorie') }}" method="post" id="categorieForm">
        <label for="libelle">Libellé</label>
        <input type="text" name="libelle" id="libelle">
        <label for="description">Description</label>
        <input type="text" name="description" id="description">
        <label for="img">Image</label>
        <input type="text" name="img" id="img">
        <input type="hidden" name="csrf" value="{{ csrf }}">
        <input type="submit" value="Créer">
    </form>
{% endblock %}
