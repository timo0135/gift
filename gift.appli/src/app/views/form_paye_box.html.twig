{% extends 'layout.html.twig' %}

{% block title %}Payement de la box {{ id }}{% endblock %}
{% block css %}
    <link rel="stylesheet" href="{{ base_path() }}/{{ css }}/payement.css">
{% endblock %}
{% block js %}
    <script src="{{ base_path() }}/{{ js }}/payement.js" defer></script>
{% endblock %}

{% block content %}
    <div class="container">
        <h2 class="mt-5">Payer votre box</h2>
        <div class="payment-wrapper">
            <div class="credit-card">
                <div class="card-front">
                    <div class="card-logo">VISA</div>
                    <div class="card-number">1234 5678 1234 5678</div>
                    <div class="card-holder">John Doe</div>
                    <div class="card-expiry">12/24</div>
                </div>
                <div class="card-back">
                    <div class="card-strip"></div>
                    <div class="card-cvv">123</div>
                </div>
            </div>
            <form action="{{ url_for('PostPaiement') }}" method="POST" id="payment-form" class="payment-form">
                <div class="form-group">
                    <label for="card-number">Numéro de carte</label>
                    <input type="text" class="form-control" id="card-number" name="card_number" maxlength="19" required>
                    <div class="invalid-feedback" id="card-number-error">Numéro de carte invalide</div>
                </div>
                <div class="form-group">
                    <label for="card-holder">Nom</label>
                    <input type="text" class="form-control" id="card-holder" name="card_holder" required>
                    <div class="invalid-feedback" id="card-holder-error">Nom invalide</div>
                </div>
                <div class="form-group">
                    <label for="card-expiry">Date d'expiration</label>
                    <input type="text" class="form-control" id="card-expiry" name="card_expiry" placeholder="MM/YY" maxlength="5" required>
                    <div class="invalid-feedback" id="card-expiry-error">Date d'expiration invalide</div>
                </div>
                <div class="form-group">
                    <label for="card-cvv">Cryptogramme</label>
                    <input type="text" class="form-control" id="card-cvv" name="card_cvv" maxlength="3" required>
                    <div class="invalid-feedback" id="card-cvv-error">Cryptogramme invalide</div>
                </div>
                <input type="hidden" name="box_id" value="{{ id }}">
                <input type="hidden" name="csrf" value="{{ csrf }}">
                <button type="submit" class="btn btn-primary">Payer</button>
            </form>
        </div>
    </div>
{% endblock %}
