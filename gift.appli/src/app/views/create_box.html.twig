{% extends 'layout.html.twig' %}

{% block title %}Catégorie {{ categorie.id }}{% endblock %}
{% block css %}
    <link rel="stylesheet" href="{{ base_path()}}/{{ css }}/formBox.css ">
{% endblock %}
{% block js %}
    <script defer src="{{ base_path()}}/{{ js }}/formBox.js"></script>
{% endblock %}

{% block content %}


    <h1>Créer une box</h1>
    <form action="{{ url_for('PostcreateBox') }}" method="post" id="boxForm">
        <label for="libelle">Libellé</label>
        <input type="text" name="libelle" id="libelle">
        <label for="description">Description</label>
        <input type="text" name="description" id="description">
        <label for="kdo">KDO</label>
        <input type="checkbox" name="kdo" id="kdo">
        <div id="message_kdo_container" style="display: none;">
            <label for="message_kdo">Message KDO</label>
            <input type="text" name="message_kdo" id="message_kdo">
        </div>
        <label for="box_predefinie_id">Box prédéfinie</label>
        <select name="box_predefinie_id" id="box_predefinie_id">
            <option  value="0">Aucune</option>
            {% for box in boxes %}
                <option value="{{ box.id }}"{% if id != null and id == box.id %} selected {% endif %}>{{ box.libelle }} </option>
            {% endfor %}
        </select>
        <input type="hidden" name="csrf" value="{{ csrf }}">
        <input type="submit" value="Créer">
    </form>
{% endblock %}
